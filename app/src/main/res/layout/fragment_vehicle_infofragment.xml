<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
              android:orientation="vertical"
              tools:context="car.gagan.cobratotrackit.Classes.Fragments.VehicleInfofragment">


    <TextView
        android:id="@+id/txtvManufactorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="7dp"

        android:gravity="center"
        android:text="Ford Mustang"
        android:textColor="@color/white"
        android:textSize="27sp"/>

    <TextView
        android:id="@+id/txtvModelName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/red"/>


    <TextView
        android:id="@+id/txtvLicence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="License Plate : "
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/txtvUpdatedOn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Last updated on"
        android:textColor="@color/white"/>


    <ImageView
        android:id="@+id/imgvCarImg"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_marginBottom="15dp"
        android:scaleType="fitCenter"
        />

</LinearLayout>
